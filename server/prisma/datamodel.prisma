enum AccountType {
  TRIAL
  MONTHLY_PAID
}

enum RateType {
  HOURLY
  FLAT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum RateType {
  HOURLY
  FLAT
}

type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  type: AccountType! @default(value: "TRIAL")
  ccLast4: String
  stripeId: String
  firstName: String
  lastName: String
  children: [Child!]!
}


type Child {
  id: ID! @unique
  firstName: String!
  lastName: String!
  birthday: DateTime
  owner: User!
  rateAmount: Float!
  rateType: RateType!
  createdAt: DateTime!
  updatedAt: DateTime!
  dates: [Date!]!
  gender: Gender!
}

type Date {
  id: ID! @unique
  email: String! @unique
  password: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  type: AccountType! @default(value: "TRIAL")
  ccLast4: String
  stripeId: String

  firstName: String
  lastName: String
  children: [Child!]!
}

type Child {
  id: ID! @unique
  firstName: String!
  lastName: String!
  birthday: DateTime
  owner: User!
  rateAmount: Float!
  rateType: RateType!
  createdAt: DateTime!
  updatedAt: DateTime!
  dates: [Date!]!
  gender: Gender!
}

type Date {
  id: ID! @unique
  dateObjectId: String!
  owner: Child!
  month: Float!
  day: Float!
  year: Float!
  hours: Float!
  dayOfWeek: String
  notes: String
  paid: Float
  isFixedRate: Boolean
}